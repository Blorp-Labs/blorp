{
  "expo": {
    "name": "LemConnect",
    "slug": "lemmy-connect",
    "platforms": [
      "ios",
      "android"
    ],
    "plugins": [
      "vxrn/expo-plugin",
      [
        "expo-font",
        {
          "fonts": [
            "./node_modules/@react-native-vector-icons/fontawesome6/fonts/FontAwesome6_Brands.ttf",
            "./node_modules/@react-native-vector-icons/fontawesome6/fonts/FontAwesome6_Regular.ttf",
            "./node_modules/@react-native-vector-icons/fontawesome6/fonts/FontAwesome6_Solid.ttf"
          ]
        }
      ]
    ],
    "icon": "./public/app-icon.png",
    "splash": {
      "image": "./public/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.christianjuth.lemmy-connect",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ]
      }
    },
    "orientation": "default",
    "userInterfaceStyle": "automatic",
    "android": {
      "package": "com.christianjuth.lemmy"
    },
    "updates": {
      "enabled": false
    }
  }
}
